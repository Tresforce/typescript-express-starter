{
  "name": "typescript-express-starter",
  "version": "1.0.0",
  "description": "quick-start for typescript express",
  "main": "src/index.ts",
  "scripts": {
    "generateDocs": "jsdoc -c jsdoc.json",
    "showDocs": "live-server --quiet --port=5000 --open=./docs",
    "build": "NODE_ENV=production webpack",
    "buildDockerImage": "docker image build -t mvp .",
    "runLocalDocker": "docker-compose up --build",
    "stopLocalDocker": "docker-compose down",
    "startLocalDb": "docker run --rm -h localhost --name pg-docker -e POSTGRES_PASSWORD=psw -e POSTGRES_USER=admin -e POSTGRES_DB=devdb -d -p 5432:5432 postgres:11.5",
    "stopLocalDb": "docker kill pg-docker",
    "prebuild": "rm -rf ./build",
    "dev": "ts-node-dev --respawn --transpileOnly src/index.ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --fix",
    "start": "node ./build/index.js",
    "test:unit": "NODE_ENV=testing jest --group=unit",
    "test:integration": "NODE_ENV=testing jest --group=integration",
    "test-ci": "NODE_ENV=testing jest --collectCoverage=true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tresforce/typescript-express-starter.git"
  },
  "author": "James Davidson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Tresforce/typescript-express-starter/issues"
  },
  "homepage": "https://github.com/Tresforce/typescript-express-starter#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "class-validator": "^0.11.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "install": "^0.13.0",
    "logdna-winston": "^2.2.5",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.20",
    "validate.js": "^0.13.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.7",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "better-docs": "^1.4.7",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-runner-groups": "^1.0.0",
    "jest-runner-tsc": "^1.6.0",
    "jsdoc": "^3.6.3",
    "lint-staged": "^9.4.3",
    "live-server": "^1.2.1",
    "prettier": "^1.19.1",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-node-externals": "^1.7.2"
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node",
    "runner": "groups",
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/types/*",
      "!**/node_modules/**",
      "!**/__tests__/**",
      "!src/utils/logger/*",
      "!src/**/index.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
